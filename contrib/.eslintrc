{
  "parser": "babel-eslint",
  "plugins": [
    "promise"
  ],
  "extends": [
    "standard",
    "standard-react"
  ],
  "rules": {
    //    "react/jsx-no-bind": [
    //      2,
    //      {
    //        "ignoreRefs": true
    //      }
    //    ],
    "react/jsx-no-bind": 0,
    "prefer-template": 2,
    "react/jsx-indent-props": 0,
    "react/jsx-indent": 0,
    "no-return-assign": 0,
    "jsx-quotes": [
      "error",
      "prefer-double"
    ],
    "no-var": 2,
    "prefer-const": 2,
    "prefer-arrow-callback": [
      "error",
      {
        "allowNamedFunctions": true
      }
    ],
    "arrow-parens": 0,
    "space-before-function-paren": 0,
    "indent": 0,
    "generator-star-spacing": ["error", {"before": false, "after": true}],
    "react/jsx-tag-spacing": 2,
    "react/jsx-space-before-closing": 0
  }
}
