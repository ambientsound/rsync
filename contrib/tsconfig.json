{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "dom",
      "es2016",
      "es2017.object"
    ]
  },
  "include": [
    "./declarations.d.ts",
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}